<!DOCTYPE html>
<html lang="es">
  <%- include("partials/head") %> 
  <body>
    <%- include("partials/navbar") %> 
    <div class="container">

      <form id="pedidoForm">
        <!-- Selector de categoría -->
        <div class="mb-3">
          <label for="categoria" class="form-label">Categoría</label>
          <select id="categoria" class="form-select">
            <option value="">Selecciona una categoría</option>
            <!-- Las opciones se generarán dinámicamente o estarán estáticas -->
          </select>
        </div>
    
        <!-- Selector de producto -->
        <div class="mb-3">
          <label for="producto" class="form-label">Producto</label>
          <select id="producto" class="form-select" disabled>
            <option value="">Selecciona un producto</option>
            <!-- Se llenará dinámicamente -->
          </select>
        </div>
    
        <!-- Campo de cantidad -->
        <div class="mb-3">
          <label for="cantidad" class="form-label">Cantidad</label>
          <input type="number" class="form-control" id="cantidad" min="1" disabled value="1"/>
        </div>
    
        <!-- Botón de envío -->
        <button type="submit" class="btn" disabled>Enviar Pedido</button>
      </form>
    </div>
    
    <%- include("partials/footer") %> 
  </body>
</html>
